{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "outDir": "../dist",
    "rootDirs": ["."],
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../node_modules/@nomiclabs/buidler-web3/src/type-extensions.d.ts",
    "../node_modules/@nomiclabs/buidler-truffle5/src/type-extensions.d.ts"
  ],
  "exclude": []
}
