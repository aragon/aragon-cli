{
  "name": "@aragon/cli-utils",
  "version": "0.0.8",
  "description": "Common building blocks for CLI tools",
  "main": "./dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "babel src --out-dir dist --source-maps",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "test": "ava --verbose",
    "test:watch": "ava --watch",
    "test:coverage": "nyc --all --reporter=text --reporter=text-summary --reporter=lcovonly npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aragon/aragon-cli.git"
  },
  "keywords": [
    "cli",
    "utils",
    "aragon",
    "ethereum"
  ],
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/aragon/aragon-cli/issues"
  },
  "homepage": "https://github.com/aragon/aragon-cli#readme",
  "dependencies": {
    "chalk": "^3.0.0",
    "figures": "^3.0.0",
    "listr-silent-renderer": "^1.1.1",
    "listr-update-renderer": "^0.5.0",
    "source-map-support": "^0.5.11",
    "listr-verbose-renderer": "^0.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "ava": "^2.3.0",
    "babel-eslint": "^10.0.2",
    "core-js": "^3.1.4",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-ava": "^8.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.3",
    "sinon": "^7.4.1" 
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3",
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:ava/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
