{
  "name": "create-aragon-app",
  "version": "2.7.2",
  "description": "Aragon command-line tool to create aragon apps",
  "bin": {
    "create-aragon-app": "./dist/index.js"
  },
  "scripts": {
    "build": "babel src --out-dir dist --source-maps",
    "build:watch": "yarn build -- --watch",
    "link-bin": "npm link",
    "unlink-bin": "npm unlink",
    "lint": "eslint src test",
    "lint:fix": "yarn lint -- --fix",
    "prepublishOnly": "synp --source-file yarn.lock && npm shrinkwrap",
    "test": "jest ./test/*",
    "test:watch": "jest ./test/* --watch --timeout=10m",
    "test:clean": "rm -rf ./.tmp && yarn test:reset-cache",
    "test:reset-cache": "jest ./test/* --clearCache --timeout=10m",
    "test:update-snapshots": "yarn test:clean && yarn test -- --updateSnapshot",
    "test:coverage:html": "nyc --all --reporter html  yarn test",
    "test:coverage": "nyc --all --reporter=text --reporter=text-summary --reporter=lcovonly yarn test"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/aragon-cli/tree/master/packages/create-aragon-app"
  },
  "keywords": [
    "create-aragon-app",
    "aragon",
    "ethereum"
  ],
  "author": "Aragon Association <legal@aragon.org>",
  "contributors": [
    "Gabriel Garcia <gabrielpk.18@gmail.com>"
  ],
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/aragon/aragon-cli/issues"
  },
  "homepage": "https://github.com/aragon/aragon-cli#readme",
  "dependencies": {
    "chalk": "^4.0.0",
    "command-exists": "^1.2.8",
    "engine-check": "^1.0.1",
    "execa": "^4.0.1",
    "figures": "^3.0.0",
    "fs-extra": "^9.0.0",
    "git-clone": "^0.1.0",
    "jest": "26.6.3",
    "listr": "^0.14.3",
    "listr-silent-renderer": "^1.1.1",
    "listr-update-renderer": "^0.5.0",
    "listr-verbose-renderer": "^0.6.0",
    "replace": "^1.1.0",
    "source-map-support": "^0.5.11",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "ava": "^3.8.2",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^6.0.0",
    "core-js": "^3.1.4",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-ava": "^10.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "node-fetch": "^2.3.0",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "synp": "^1.7.0"
  },
  "engines": {
    "node": ">=10.0.0 <11 || >=12.0.0 <13"
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3",
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:ava/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
