{
  "name": "@aragon/toolkit",
  "version": "0.0.5",
  "description": "Programmatic interface for interacting with Aragon",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/aragon-cli/tree/master/packages/toolkit"
  },
  "scripts": {
    "build": "babel src --out-dir dist --source-maps",
    "build:watch": "yarn build -- --watch",
    "lint": "eslint src test",
    "lint:fix": "yarn lint -- --fix",
    "test": "ava --verbose --timeout=10m",
    "test:watch": "ava --watch --timeout=10m",
    "test:clean": "rm -rf ./.tmp && yarn test:reset-cache",
    "test:reset-cache": "ava --reset-cache --timeout=10m",
    "test:update-snapshots": "yarn test:clean && yarn test -- --update-snapshots",
    "test:coverage:html": "nyc --all --reporter html  yarn test",
    "test:coverage": "nyc --all --reporter text --reporter text-summary --reporter lcovonly  yarn test",
    "test:integration": "ava --verbose ./test-examples/*.test.js"
  },
  "keywords": [
    "aragon",
    "cli",
    "ethereum"
  ],
  "files": [
    "@types",
    "dist"
  ],
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@aragon/abis": "^1.1.0",
    "@aragon/apm": "^3.1.4",
    "@aragon/apps-shared-minime": "^1.0.2",
    "@aragon/aragen": "^6.0.0-beta.1",
    "@aragon/wrapper": "^5.0.0-rc.23",
    "babel-eslint": "^10.0.3",
    "byte-size": "^7.0.0",
    "eth-ens-namehash": "^2.0.8",
    "ethereum-ens": "^0.8.0",
    "execa": "^4.0.1",
    "fs-extra": "^9.0.0",
    "get-folder-size": "^2.0.1",
    "go-platform": "^1.0.0",
    "ipfs-http-client": "^47.0.1",
    "is-ipfs": "^1.0.3",
    "kill-port": "^1.6.0",
    "pkg-dir": "^4.2.0",
    "ps-tree": "^1.2.0",
    "rxjs": "^6.5.3",
    "stringify-tree": "^1.0.2",
    "web3": "^1.2.4",
    "web3-eth-abi": "^1.2.4",
    "web3-utils": "^1.2.7"
  },
  "devDependencies": {
    "@aragon/test-helpers": "^2.1.0",
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "ava": "^3.8.2",
    "babel-plugin-istanbul": "^6.0.0",
    "bn.js": "^5.0.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-ava": "^10.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ethereumjs-abi": "^0.6.8",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.2"
  },
  "engines": {
    "node": ">=10.0.0 <11 || >=12.0.0 <13"
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js",
      "scripts/**/*.js"
    ],
    "sourceMap": false,
    "instrument": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3",
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:ava/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
