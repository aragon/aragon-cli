{
  "name": "@aragon/toolkit",
  "version": "0.0.1-beta.1",
  "description": "Programmatic interface for interacting with Aragon",
  "main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "babel src --out-dir dist --source-maps",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "test": "ava --verbose",
    "test:watch": "ava --watch",
    "test:clean": "rm -rf ./.tmp",
    "test:coverage": "nyc --all --reporter text --reporter text-summary --reporter lcovonly  npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/aragon-cli/tree/master/packages/node-api"
  },
  "keywords": [
    "aragon",
    "cli",
    "ethereum"
  ],
  "files": [
    "@types",
    "dist"
  ],
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "ava": "^2.4.0",
    "babel-plugin-istanbul": "^5.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.3",
    "sinon": "^7.5.0"
  },
  "dependencies": {
    "@aragon/apm": "^3.1.0",
    "@aragon/apps-shared-minime": "^1.0.2",
    "@aragon/aragen": "^5.4.2",
    "@aragon/id": "^2.1.0",
    "@aragon/os": "^4.3.0",
    "@aragon/wrapper": "5.0.0-rc.9",
    "babel-eslint": "^10.0.3",
    "ethereum-ens": "^0.7.8",
    "fs-extra": "^8.1.0",
    "get-folder-size": "^2.0.1",
    "go-platform": "^1.0.0",
    "ipfs-http-client": "^40.1.0",
    "kill-port": "^1.6.0",
    "rxjs": "^6.5.3",
    "stringify-tree": "^1.0.2",
    "web3-eth-abi": "^1.2.4",
    "web3-utils": "^1.2.4"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js",
      "scripts/**/*.js"
    ],
    "sourceMap": false,
    "instrument": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3",
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:ava/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
