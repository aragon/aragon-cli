{
  "name": "@aragon/toolkit",
  "version": "0.0.2",
  "description": "Programmatic interface for interacting with Aragon",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/aragon-cli/tree/master/packages/toolkit"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:clean": "rm -rf ./.tmp && npm run test:reset-cache",
    "test:reset-cache": "ava --reset-cache",
    "test:update-snapshots": "npm run test:clean && npm run test -- --update-snapshots",
    "test:coverage": "tsc && nyc ava"
  },
  "keywords": [
    "aragon",
    "cli",
    "ethereum"
  ],
  "files": [
    "@types",
    "dist"
  ],
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@aragon/abis": "^1.1.0",
    "@aragon/apm": "3.1.2-beta.3",
    "@aragon/apps-shared-minime": "^1.0.2",
    "@aragon/aragen": "^6.0.0-beta.1",
    "aragon-cli-wrapper": "^5.0.0-rc.22",
    "byte-size": "^6.2.0",
    "ethereum-ens": "^0.7.8",
    "fs-extra": "^8.1.0",
    "get-folder-size": "^2.0.1",
    "go-platform": "^1.0.0",
    "ipfs-http-client": "^40.1.0",
    "kill-port": "^1.6.0",
    "pkg-dir": "^4.2.0",
    "ps-tree": "^1.2.0",
    "rxjs": "^6.5.3",
    "stringify-tree": "^1.0.2",
    "execa": "^3.0.0",
    "web3": "^1.2.4",
    "web3-eth-abi": "^1.2.4",
    "web3-utils": "^1.2.4"
  },
  "devDependencies": {
    "@aragon/test-helpers": "^2.1.0",
    "@babel/register": "^7.7.4",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/lodash": "^4.14.149",
    "@types/lodash.flatten": "^4.4.6",
    "@types/node": "^12.12.21",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "ava": "^2.4.0",
    "bn.js": "^5.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ethereumjs-abi": "^0.6.8",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.3",
    "sinon": "^7.5.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "ava": {
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "lcovonly",
      "text",
      "text-summary"
    ],
    "include": [
      "src/**/*.js",
      "scripts/**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
